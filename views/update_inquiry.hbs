<div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Update Inquiry</h6>
</div>
<form method="POST" action="/inquiry">
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="name">Name: </label>
      {{#each results}}
      <input type="text" class="form-control" name="name" id="name" value="{{first_name}} {{last_name}}" readonly>
      <input type="text" class="form-control" name="id" id="id" value="{{id}}" hidden>
      {{/each}}
    </div>
    <div class="form-group col-md-6">
      <label for="room_service">Called ?</label><br>
      <select name="called" id="called" class="form-control">
          <option value="0">Not Called</option>
          <option value="1">Called</option>
      </select>
    </div>
    
    </div>
  <button type="submit" class="btn btn-primary">Save</button>
</form>